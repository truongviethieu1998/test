
@{
    ViewBag.Title = "DienThoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Dienthoai = (List<luxuryShop.Models.Enity.Product>)ViewBag.Category;
}
<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 20px;
        margin: 20px 0;
    }

    p.card-text {
        height: 15vh;
    }

    .list {
        padding: 20px 0;
    }

        .list a {
            color: black;
            text-decoration: underline;
            transition: .3s all;
        }

            .list a:hover {
                background: black;
                color: white;
            }

        .list #back {
            text-transform: uppercase;
            font-weight: 500;
        }

    div#carouselExampleControls {
        margin-top: 75px !important;
    }
</style>
<section>
    <div class="container">
        <div id="carouselExampleControls" class="carousel slide my-4" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/IMAGES/Sliding_Mi_9_SE_1505.jpg" class="d-block w-100" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/IMAGES/galaxy-s10_-1600x600.jpg" class="d-block w-100" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/IMAGES/sliding_8_plus_511.jpg" class="d-block w-100" alt="Third slide">
                </div>
                <br>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="list">
            <a href="" id="back"><i class="fas fa-chevron-left"></i> Trở Lại</a> /
            <a href="">Trang Chủ</a> /
            <a href="">Giày</a>
        </div>
        <h2 class="h2">SamSung</h2>
        <div class="product-grid">
            @foreach (var item in Dienthoai)
            {
                <div class="card round float-right">
                    <img src="@item.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@(string.Format("{0:#,##0}", item.Price)) ₫ <br> Trả góp lãi suất 0% với home credit. Trả trước 30%.</p>
                        <a href="muahang.html" class="btn btn-primary">Chi tiết</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
